isbn = {1025-6016},
issn = {10256016},
journal = {Isotopes in Environmental and Health Studies},
keywords = {Carbon 13,Hydrogen 2,Natural variations,Nutrients,Plant-animal interactions,Review,Stable isotopes,Succulents,Water,birds,cacti,interactions,nutrition,water},
