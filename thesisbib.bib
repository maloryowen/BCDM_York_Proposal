isbn = {1984001701},
issn = {01917811},
journal = {Oecologia},
keywords = {analysis {\'{a}} holistic {\'{a}},ecosystems {\'{a}} facilitation {\'{a}},faciltation,gradient,interaction,interdependence,positive plant-plant interaction},
mendeley-tags = {faciltation,interaction,interdependence,positive plant-plant interaction},
