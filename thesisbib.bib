file = {:C$\backslash$:/Users/Malory/Documents/Masters/First 100/2008{\_}-{\_}Luis{\_}Marone{\_}-{\_}Canseedeatingbirdsexerttopdowneffectsongrassesofth[retrieved{\_}2018-09-29].pdf:pdf},
isbn = {1600-0706},
journal = {Oikos},
keywords = {birds,grass,grasses,seed predation},
