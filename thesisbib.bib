issn = {18728308},
journal = {Behavioural Processes},
keywords = {Diet,Indirect effects,Movement,Plant-animal mutualism,Plasticity,Pollination},
number = {October 2017},
pages = {27--34},
publisher = {Elsevier},
title = {{Impacts of nectar robbing on the foraging ecology of a territorial hummingbird}},
