journal = {Biological Conservation},
keywords = {Conservation,Human-carnivore conflict,Human-wildlife conflict,Ruaha,carnivores,human wildlife conflict,humans},
mendeley-tags = {carnivores,human wildlife conflict,humans},
pages = {19--27},
publisher = {Elsevier Ltd},
title = {{Carnivores, culture and 'contagious conflict': Multiple factors influence perceived problems with carnivores in Tanzania's Ruaha landscape}},
