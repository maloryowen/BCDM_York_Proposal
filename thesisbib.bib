isbn = {2169-8996},
issn = {21698996},
journal = {Journal of Geophysical Research Atmospheres},
keywords = {NARCCAP,RegCM3,global warming,high-resolution climate modeling,precipitation extremes},
number = {13},
pages = {7063--7086},
title = {{Precipitation extremes over the continental United States in a transient, high-resolution, ensemble climate model experiment}},
